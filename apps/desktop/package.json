{
  "name": "@comicers/desktop",
  "productName": "Comicers",
  "description": "Manga reader and library manager for the desktop",
  "version": "2.16.0",
  "private": true,
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "biome lint src",
    "dist:win": "pnpm electron-builder --publish onTagOrDraft --win",
    "dist:mac": "pnpm electron-builder --publish onTagOrDraft --mac",
    "dist:linux": "pnpm electron-builder --publish onTagOrDraft --linux"
  },
  "build": {
    "productName": "Comicers",
    "appId": "com.faltro.Comicers",
    "files": [
      "out/**/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "development",
      "hardenedRuntime": false,
      "identity": null,
      "entitlements": null,
      "entitlementsInherit": null,
      "gatekeeperAssess": false
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "extraResources": [
      "./assets/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "xgi",
      "repo": "comicers"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xgi/comicers"
  },
  "author": {
    "name": "xgi",
    "email": "xgi@faltro.com",
    "url": "https://faltro.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xgi/comicers/issues"
  },
  "keywords": [
    "manga",
    "manga-reader",
    "comics",
    "electron",
    "react",
    "typescript",
    "ts"
  ],
  "homepage": "https://comicers.org",
  "dependencies": {
    "@comicers/ui": "workspace:*",
    "@biomejs/biome": "1.9.4",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.2",
    "@radix-ui/react-collapsible": "^1.1.1",
    "@radix-ui/react-context-menu": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.2",
    "@radix-ui/react-progress": "^1.1.1",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.3",
    "@radix-ui/react-toggle": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tanstack/react-table": "^8.20.5",
    "@tiyo/common": "1.0.0",
    "@types/discord-rpc": "^4.0.0",
    "@types/enzyme": "^3.10.10",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/history": "4.7.9",
    "@types/jsdom": "^20.0.0",
    "@types/mousetrap": "^1.6.8",
    "@types/node": "22.8.6",
    "@types/node-fetch": "^2.5.12",
    "@types/react": "^18.0.20",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/semver": "^7.3.9",
    "@types/uuid": "^8.3.3",
    "aki-plugin-manager": "^1.3.3",
    "browserslist-config-erb": "^0.0.3",
    "bufferutil": "^4.0.8",
    "class-variance-authority": "^0.7.1",
    "cmdk": "^1.0.4",
    "core-js": "^3.39.0",
    "discord-rpc": "^4.0.1",
    "electron-debug": "^3.1.0",
    "electron-log": "^5.2.0",
    "electron-updater": "^4.6.1",
    "electron-vite": "^2.3.0",
    "form-data": "^4.0.1",
    "formdata-node": "^4.3.1",
    "history": "^5.2.0",
    "html-react-parser": "^5.0.6",
    "jsdom": "^25.0.1",
    "jszip": "^3.8.0",
    "lucide-react": "^0.468.0",
    "mousetrap": "^1.6.5",
    "node-fetch": "^2.6.7",
    "node-unrar-js": "^2.0.0",
    "pkce-challenge": "^2.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.1",
    "recoil": "^0.7.4",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^6.0.1",
    "semver": "^7.5.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.4.5",
    "utf-8-validate": "^6.0.3",
    "uuid": "^8.3.2",
    "vite": "^5.4.10",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-node-polyfills": "^0.22.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "pnpm": {
    "overrides": {
      "@electron/rebuild": "3.7.0"
    }
  }
}